<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="tu_berlin.alexei.cis_tu_berlin.MainActivity">

    <com.esri.android.map.MapView
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        mapoptions.MapType="Streets"
        mapoptions.center="52.512330, 13.326923"
        mapoptions.ZoomLevel="18"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/i_btn"
        android:drawableLeft="@drawable/information_outline_w"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/info_btn"
        android:visibility="invisible"
        android:background="@color/redMain"
        android:textColor="@color/whiteMain"
        android:textSize="14dp"
        android:layout_gravity="top|center"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonPosition"
        android:src="@drawable/crosshairs_gps"
        app:backgroundTint="@color/redMain"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:layout_gravity="bottom|right"/>

</FrameLayout>
